<% if !flash[:notice].blank? %>
  <div class="notice">
    <%= flash[:notice] %>
  </div>
<% end %>
  
<div class="Books home">
  <h1>Books</h1>
  <br>
  <td>
    <a href ="<%= pages_add_path %>"> New Book</a>
  </td>
  <table>
    <tr class="header">
      <th>Title</th>
      <th>Author</th>
      <th>Genre</th>
      <th>Price</th>
      <th>Published date</th>
      <th colspan="3"></th>
    </tr>
    
    <% @books.each do |book| %>
      <tr>
        <td><%= book.Title %></td>
        <td><%= book.Author %></td>
        <td><%= book.Genre %></td>
        <td><%= book.Price %></td>
        <td><%= book.PublishedDate %></td>
        <td class="actions">
          <%= link_to("Show", pages_show_path(book), :class  => 'action show')%>
          <%= link_to("Edit", pages_edit_path(book), :class  => 'action edit') %>
          <%= link_to("Delete", pages_delete_path(book), :class => 'action delete') %>
        </td>
      </tr>
    <% end %>
      
  </table>
</div>